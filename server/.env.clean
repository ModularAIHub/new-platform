# ==========================================
# DATABASE
# ==========================================
DATABASE_URL=postgresql://username:password@host:port/database
DB_SSL=true
# Set to false for Supabase (uses self-signed certificates)
# Set to true only if you have a valid CA certificate
DB_SSL_REJECT_UNAUTHORIZED=false
# Optional PEM CA certificate (escape newlines as \n)
# DB_SSL_CA=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----

# ==========================================
# REDIS
# ==========================================
REDIS_URL=rediss://default:your-redis-password@your-redis-host:6379
UPSTASH_REDIS_REST_URL=https://your-redis-host.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-rest-token

# ==========================================
# JWT & SECURITY
# ==========================================
JWT_SECRET=your-secure-random-jwt-secret-key-here
JWT_REFRESH_SECRET=your-secure-random-jwt-refresh-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=15d
ENCRYPTION_KEY=your-secure-random-encryption-key-here

# ==========================================
# ENVIRONMENT & DOMAINS
# ==========================================
NODE_ENV=development
DOMAIN=localhost
CLIENT_URL=http://localhost:5173

# ==========================================
# PAYMENT
# ==========================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ==========================================
# EMAIL
# ==========================================
RESEND_API_KEY=your-resend-api-key
